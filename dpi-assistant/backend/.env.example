# Google AI API Key (Required)
GOOGLE_AI_API_KEY=your_api_key_here

# Server Configuration
PORT=8080

# Qdrant Vector Database Configuration
# Local development (Qdrant running locally via Docker)
QDRANT_URL=http://localhost:6333

# Docker Compose deployment (both backend and Qdrant in containers)
# QDRANT_URL=http://qdrant:6333

# Production deployment (Qdrant Cloud)
# QDRANT_URL=https://your-cluster.qdrant.io:6333
# QDRANT_API_KEY=your_qdrant_api_key

# Vector Search Configuration
USE_VECTOR_SEARCH=true  # Set to 'false' to disable vector search
